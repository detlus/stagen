var stagen = require('../lib/stagen');
var ContentManager = require('../lib/content-manager');

// Get directory path of site files.
var pwd = process.cwd();

var site = new stagen.Site(pwd);
site.clean();
var cm = new ContentManager(site);
// cm.scanFiles();
cm.generateOutput();
cm.generateListingPages();
cm.copyThemeAssets();
site.finalize();
